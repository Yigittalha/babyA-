# ================================
# Baby AI - Professional Environment Configuration
# ================================

# Application Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true
APP_NAME=Baby AI - Professional Baby Name Generator
APP_VERSION=2.0.0

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# ================================
# SECURITY CONFIGURATION
# ================================

# JWT Security (CHANGE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-change-this-in-production-minimum-32-characters
ALGORITHM=HS256

# Token Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Security Headers
SECURITY_HEADERS_ENABLED=true
HTTPS_ONLY=false  # Set to true in production
HSTS_MAX_AGE=31536000

# ================================
# DATABASE CONFIGURATION
# ================================

# SQLite (Development)
DATABASE_URL=sqlite:///./baby_names.db
DATABASE_ECHO=false

# PostgreSQL (Production)
# DATABASE_URL=postgresql://babyai:password@localhost:5432/babyai
# POSTGRES_PASSWORD=babyai_secure_password

# ================================
# REDIS CONFIGURATION
# ================================

REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SSL=false
REDIS_DECODE_RESPONSES=true

# ================================
# RATE LIMITING CONFIGURATION
# ================================

RATE_LIMIT_ENABLED=true

# Default rate limits (requests per period)
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=60
PREMIUM_RATE_LIMIT_CALLS=1000
ADMIN_RATE_LIMIT_CALLS=10000

# ================================
# AI SERVICE CONFIGURATION
# ================================

# OpenRouter API (Primary)
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=anthropic/claude-3-haiku

# OpenAI API (Fallback)
# OPENAI_API_KEY=your-openai-api-key-here

# ================================
# CORS CONFIGURATION
# ================================

CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174,http://localhost:5175,https://your-domain.com

# ================================
# LOGGING CONFIGURATION
# ================================

LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json, text

# Sentry Error Tracking (Optional)
# SENTRY_DSN=your-sentry-dsn-here

# ================================
# EMAIL CONFIGURATION
# ================================

# SMTP Settings (for notifications)
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@yourdomain.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_TLS=true
MAIL_SSL=false

# ================================
# CDN & STORAGE CONFIGURATION
# ================================

CDN_URL=
STATIC_FILES_URL=/static
UPLOAD_MAX_SIZE=10485760  # 10MB in bytes

# ================================
# MONITORING & ANALYTICS
# ================================

ENABLE_METRICS=true
ENABLE_ANALYTICS=true
ENABLE_CACHING=true
ENABLE_BACKGROUND_TASKS=true

# Prometheus monitoring
# PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc

# ================================
# FRONTEND CONFIGURATION
# ================================

# Vite Frontend Environment
VITE_API_URL=http://localhost:8000
VITE_ENVIRONMENT=development
VITE_APP_NAME=Baby AI
VITE_APP_VERSION=2.0.0

# ================================
# DOCKER & DEPLOYMENT
# ================================

# Docker-specific settings
COMPOSE_PROJECT_NAME=babyai

# Production secrets
GRAFANA_PASSWORD=admin

# ================================
# FEATURE FLAGS
# ================================

# Feature toggles
FEATURE_PREMIUM_SUBSCRIPTIONS=true
FEATURE_USER_ANALYTICS=true
FEATURE_SOCIAL_FEATURES=false
FEATURE_MULTILINGUAL_UI=true
FEATURE_VOICE_GENERATION=false

# ================================
# BUSINESS CONFIGURATION
# ================================

# Default subscription limits
FREE_DAILY_GENERATIONS=10
PREMIUM_DAILY_GENERATIONS=100
PREMIUM_PRICE_MONTHLY=9.99
PREMIUM_PRICE_YEARLY=99.99

# Currency
DEFAULT_CURRENCY=TRY
SUPPORTED_CURRENCIES=TRY,USD,EUR

# ================================
# EXTERNAL SERVICES
# ================================

# Payment processing (Stripe, PayPal, etc.)
# STRIPE_PUBLIC_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Analytics services
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# MIXPANEL_TOKEN=your_mixpanel_token

# Social media integration
# FACEBOOK_APP_ID=
# TWITTER_API_KEY=
# INSTAGRAM_ACCESS_TOKEN=

# ================================
# DEVELOPMENT TOOLS
# ================================

# Development database seed
SEED_DATABASE=false
CREATE_ADMIN_USER=false
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# Testing
TESTING=false
TEST_DATABASE_URL=sqlite:///./test_baby_names.db

# ================================
# PERFORMANCE TUNING
# ================================

# Database connection pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# Redis connection pool
REDIS_MAX_CONNECTIONS=20
REDIS_RETRY_ON_TIMEOUT=true

# HTTP settings
REQUEST_TIMEOUT=30
MAX_REQUEST_SIZE=10485760  # 10MB

# ================================
# BACKUP & RECOVERY
# ================================

# Automated backups
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=

# ================================
# COMPLIANCE & PRIVACY
# ================================

# GDPR compliance
ENABLE_GDPR_FEATURES=true
DATA_RETENTION_DAYS=730  # 2 years
COOKIE_CONSENT_REQUIRED=true

# Privacy settings
ANONYMIZE_IP_ADDRESSES=true
COLLECT_ANALYTICS=true
ENABLE_CRASH_REPORTING=true

# ================================
# REGIONAL SETTINGS
# ================================

# Localization
DEFAULT_TIMEZONE=Europe/Istanbul
DEFAULT_LANGUAGE=turkish
SUPPORTED_LANGUAGES=turkish,english,arabic,persian

# Regional features
ENABLE_REGIONAL_CONTENT=true
DEFAULT_COUNTRY=TR

# ================================
# ADVANCED FEATURES
# ================================

# AI model fine-tuning
ENABLE_MODEL_TRAINING=false
TRAINING_DATA_PATH=/data/training
MODEL_VERSION=v1.0

# A/B testing
ENABLE_AB_TESTING=false
AB_TEST_TRAFFIC_SPLIT=50

# Content moderation
ENABLE_CONTENT_MODERATION=true
MODERATION_THRESHOLD=0.8

# ================================
# TROUBLESHOOTING
# ================================

# Debug flags
DEBUG_SQL=false
DEBUG_REDIS=false
DEBUG_AI_REQUESTS=false
DEBUG_RATE_LIMITING=false

# Performance monitoring
SLOW_QUERY_THRESHOLD=1.0  # seconds
SLOW_API_THRESHOLD=2.0    # seconds

# Health check intervals
HEALTH_CHECK_INTERVAL=60  # seconds
SERVICE_TIMEOUT=30        # seconds 